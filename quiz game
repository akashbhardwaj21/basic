print("Welcome to THE QUIZ!")

user = input("Do you want to play the game? ")

if user != "yes":
    quit()

print("Please write answers in lowercase letters.")
print("Let's Start!")

score = 0

first = input("What is the full form of CU? ")
if first == "control unit":
    print("Correct!")
    score += 1
else:
    print("Incorrect!")

first = input("What is the full form of GPU? ")
if first == "graphics processing unit":
    print("Correct!")
    score +=1
else:
    print("Incorrect!")

first = input("What is the full form of ALU? ")
if first == "arithmetical logical unit":
    print("Correct!")
    score +=1
else:
    print("Incorrect!")

first = input("What is the full form of CPU? ")
if first == "central processing unit":
    print("Correct!")
    score +=1
else:
    print("Incorrect!")

print("Congratulations you have scored: " + str(score) + "points.")
